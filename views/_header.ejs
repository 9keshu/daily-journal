<link rel="stylesheet" href="/css/header.css">
<header id="head">
    <h1 id="heading">&#64;Daily Journal</h1>
    <% if (!locals.user) {%>
    <form action="/users/create-session" method="POST" id="sign-in-form">
        <input type="email" placeholder="Your Email" name="email">
        <input type="password" name="password" placeholder="Your Password">
        <input type="submit" value="Sign-In">
        
    </form>
    <a href="/users/sign-up" id="not-signed-up">Not Signed Up?</a>
    <% } else { %>
        <a href="/users/destroy-session" id="sign-out">Sign-Out</a>
        <p id="username"><%= user.firstname %></p>
    <% } %> 

</header>